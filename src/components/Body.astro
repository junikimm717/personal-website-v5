---
import Navbar from './Navbar'
import DarkMode from './DarkMode'

import {FaBowlRice, FaBroom} from 'react-icons/fa6'
---

<div class="mx-auto max-w-[900px] sm:grid sm:grid-cols-12 gap-3 p-3">
  <div class="mx-1 my-3 p-3 column sm:col-span-3">
    <Navbar client:load>
      <div class="text-lg text-blue-800 dark:text-blue-300">
        <h2><a href="/">About</a></h2>
        <h2><a href="/projects">Projects</a></h2>
        <a href="/ricing">
          <h2 class="flex flex-row flex-wrap items-center gap-1">
            <span>Ricing</span>
            <FaBowlRice class="inline" />
          </h2>
        </a>
        <ul>
          <li>
            <a href="/ricing/linux">Linux</a>
          </li>
          <li>
            <a href="/ricing/macos">MacOS</a>
          </li>
        </ul>
        <a href="/mop">
          <h2 class="flex flex-row flex-wrap items-center gap-1">
            <span>MOP</span>
            <FaBroom class="inline" />
          </h2>
        </a>
        <h2><a href="/resume.pdf">Resume</a></h2>
      </div>
      <DarkMode client:idle />
    </Navbar>
  </div>
  <div class="mx-1 my-3 p-3 column sm:col-span-9">
    <slot/>
  </div>
</div>

<style scoped>
  ul {
    @apply text-blue-800 dark:text-blue-300 list-disc list-inside text-base
  }
  h2 {
    @apply text-blue-800 dark:text-blue-300 text-lg
  }
  a {
    @apply duration-200 underline decoration-blue-800 dark:decoration-blue-300 hover:font-semibold
  }
  .column {
    @apply shadow-md hover:shadow-lg hover:-translate-y-[1px] dark:shadow-gray-600 shadow-gray-400 border
    dark:border-gray-600 border-gray-400
    duration-200
  }
</style>
