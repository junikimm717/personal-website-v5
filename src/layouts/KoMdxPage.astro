---
import { fade } from "astro:transitions";
import Layout from "../layouts/Layout.astro";
import KoBody from "@/components/KoBody.astro";

interface Props {
  content: any;
}
const { content } = Astro.props;
---

<Layout {content} lang="ko">
  <KoBody>
    <div
      class="p-0 m-0 duration-500 prose prose-h1:font-extrabold
      prose-h2:font-bold prose-h3:font-semibold prose-a:underline
      prose-a:decoration-primary prose-a:decoration-2
      prose-figcaption:text-center prose-figcaption:leading-7 prose-p:leading-8
      prose-a:transition-all prose-sm twocol:prose-base prose-headings:font-sans
      dark:prose-invert dark:prose-a:decoration-primary-dark prose-a:inline
      prose-ul:list-outside"
      transition:name="mdxpage"
      transition:animate={fade({ duration: "0.25s" })}
    >
      <slot />
    </div>
  </KoBody>
</Layout>

<style is:global></style>
